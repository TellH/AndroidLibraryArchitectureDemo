    android:layout_height="match_parent">
    <EditText
        android:id="@+id/et_first"
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <EditText
        android:id="@+id/et_second"
        android:layout_width="match_parent"
        android:layout_height="38dp" />
    <Button
